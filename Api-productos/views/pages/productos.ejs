<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body>
  <header>
    <%- include('../partials/header'); %>
  </header>
  <div class="jumbotron">
    <h1 class="text-primary pb-4">Vista de productos</h1>
    <% if(!productos.length){ %>
      <div class="d-flex justify-content-center align-items-center py-4">
        <div class="text-light bg-danger d-flex justify-content-center align-items-center" style="height: 80px; width: 90%;">
          <p>No se encontraron productos</p> 
        </div>
      </div>
     
    <% } else { %>
      <table class="table table-dark table-striped">
        <thead >
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Foto</th>
        </thead>
        <tbody >
              <% productos.forEach((item) => { %>
                <tr>
                  <td class="align-middle"><%= item.title %></td>
                  <td class="align-middle"><%= item.price %></td>
                  <td class="align-middle"><img src='<%= item.thumbnail %>' alt="imagen producto" width="60"></td>
                </tr>
              <% }) %>
        </tbody>
      </table>
    <% } %>
  
  </div>
  


  
    
  </footer>
</body>
</html>